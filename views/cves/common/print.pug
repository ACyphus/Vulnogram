extends ../min

include advisory.pug

block content
    if min
        link(rel='stylesheet', href='css/style.css')
    .confidential
        if(ext)
            h5 Draft Security Advisories
        else
            h3 Confidential Information
            h3 INTERNAL USE ONLY.

    +tabulate(docs)
    each doc, i in docs
        .page
            a(name=doc.cve.CVE_data_meta.ID)
            .confidential
                if(ext)
                    h5 Draft Security Advisory
                else
                    h5 Confidential Information : INTERNAL USE ONLY
            .advisory(id=doc.cve.CVE_data_meta.ID)
            +page(doc.cve)